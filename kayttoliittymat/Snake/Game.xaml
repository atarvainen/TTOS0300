<Window x:Name="SnakeGame" x:Class="Snake.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Game" Height="500" Width="500">
    <Grid>
        <Grid HorizontalAlignment="Stretch" Height="469" Width="492" Background="Black">
            <Canvas x:Name="gameCanvas" Height="469" Width="492"/>
            <TextBlock x:Name="txtMessage" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Game on" VerticalAlignment="Top" Height="37" Width="161" Foreground="#FF20A62C" FontSize="20" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Window>
