<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="SNAKE - Main Menu" Height="407.172" Width="336.753">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="376" VerticalAlignment="Top" Width="329">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF99E828" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
            <StackPanel HorizontalAlignment="Left" Height="366" Margin="0,10,0,0" VerticalAlignment="Top" Width="329">
                <Image Height="240" Source="snake.PNG"/>
                <Button x:Name="playButton" Content="PLAY" Height="67" FontSize="36" FontWeight="Bold" Click="playButton_Click"/>
                <Button x:Name="exitButton" Content="EXIT" Height="60" FontSize="36" FontWeight="Bold" Click="exitButton_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
